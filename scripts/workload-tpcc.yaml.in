apiVersion: v1
kind: Pod
metadata:
  name: tpcc-{{ScaleFactor}}
spec:
  affinity:
    podAntiAffinity:
      preferredDuringSchedulingIgnoredDuringExecution:
      - weight: 100
        podAffinityTerm:
          labelSelector:
            matchExpressions:
            - key: app
              operator: In
              values:
              - cockroachdb
          topologyKey: kubernetes.io/hostname
  containers:
  - name: tpcc-{{ScaleFactor}}
    image: cockroachdb/cockroach-unstable
    command:
          - "/bin/bash"
          - "-ecx"
          - "exec /cockroach/cockroach workload run tpcc --drop --warehouses {{ScaleFactor}} \"postgresql://root@cockroachdb-public:26257?application_name=tpcc-{{ScaleFactor}}&sslmode=disable\""
